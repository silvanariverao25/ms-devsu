package com.banco.mscuentas.api.controller;

import com.banco.mscuentas.api.dto.*;
import com.banco.mscuentas.application.movimiento.*;
import jakarta.validation.Valid;
import org.springframework.data.domain.*;
import org.springframework.web.bind.annotation.*;

import java.time.OffsetDateTime;
import java.util.UUID;

@RestController
@RequestMapping("/reportes")
public class ReporteController {
	  private final ListMovimientosUseCase listUC;

	  public ReporteController(ListMovimientosUseCase l){
	    this.listUC=l; 
	  }	
	
	  @GetMapping
	  public Page<MovimientoResponse> list(@RequestParam UUID cuentaId, @RequestParam OffsetDateTime fechadesde, @RequestParam OffsetDateTime fechahasta, Pageable pageable){
	    return listUC.byCuentaYFechas(cuentaId,fechadesde, fechahasta, pageable);
	  }
}
